filebeat.inputs:
  - type: log
    paths:
      - /var/lib/jenkins/jobs/*/builds/*/archive/.workspaces/active/ansible_outputs/ir*no_ansi.log
    multiline.pattern: '(PLAY|PLAYBOOK|TASK)'
    multiline.negate: true
    multiline.match: after
    fields_under_root: true
    fields:
      log_source: infrared_ansible
  - type: log
    paths:
      - /var/lib/jenkins/jobs/*/builds/*/log
    exclude_files:
      - '^/var/lib/jenkins/jobs/util*'
      - '^/var/lib/jenkins/jobs/ci-rhos-shadejanitor*'
      - '^/var/lib/jenkins/jobs/upshift-component-ci-shadejanitor*'
      - '^/var/lib/jenkins/jobs/gate-jenkins-jjb-test*'
    fields_under_root: true
    fields:
      log_source: jenkins_console
  - type: log
    paths:
      - /var/lib/jenkins/jobs/*/builds/*/archive/*.yml
      - /var/lib/jenkins/jobs/*/builds/*/archive/*.yaml
    fields_under_root: true
    fields:
      log_source: infrared_yaml

output.logstash:
  hosts: ["{{ logstash_address }}"]

monitoring.enabled: false
logging.metrics.enabled: false
